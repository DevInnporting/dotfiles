#!/bin/bash

function colorizeLS {
  # Color palette
  local default_colour="0"
  local bold="1"
  local underlined="4"
  local flashing_text="5"
  local reverse_field="7"
  local red="31"
  local green="32"
  local orange="33"
  local blue="34"
  local purple="35"
  local cyan="36"
  local grey="37"
  local black_background="40"
  local red_background="41"
  local green_background="42"
  local orange_background="43"
  local blue_background="44"
  local purple_background="45"
  local cyan_background="46"
  local grey_background="47"
  local dark_grey="90"
  local light_red="91"
  local light_green="92"
