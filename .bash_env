#!/bin/bash

# PATH customization:
#   custom scripts (~/bin) and current directory
export PATH=$PATH:~/bin:.
#   Android development
export PATH=$PATH:~/android/android-studio/bin     # studio.sh - open the IDE!!
#export PATH=$PATH:~/android/sdk/build-tools/23.0.3 # aapt, aidl, zipalign, dexdump...
export PATH=$PATH:~/android/sdk/platform-tools     # adb, sqlite3, fastboot...
export PATH=$PATH:~/android/sdk/emulator           # emulator
export PATH=$PATH:~/android/sdk/tools              # emulator, android, hierarchyviewer...
export ANDROID_EMULATOR_USE_SYSTEM_LIBS=1          # AStudio uses a libstdc++ incompatible with the Intel driver installed in the system. https://askubuntu.com/questions/867081/android-studio-buggy-after-upgrade-to-16-10
